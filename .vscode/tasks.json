{
  "tasks": [
    {
      "type": "shell",
      "label": "Build Engine",
      "windows": {
        "command": "${workspaceFolder}/engine/build-engine.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/engine/build-engine.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/engine"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Build Testbed",
      "windows": {
        "command": "${workspaceFolder}/testbed/build-test.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/testbed/build-test.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/testbed"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Build Everything",
      "windows": {
        "command": "${workspaceFolder}/build.bat",
      },
      "linux": {
        "command": "${workspaceFolder}/build.sh",
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}